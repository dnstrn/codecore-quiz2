<h1>Support Requests</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Department</th>
    <th>Message</th>
    <th>Actions</th>
  </tr>
  <% @request.each do |request| %>
  <tr>
    <td><%= link_to request.name, requests_path(request) %></td>
    <td><%= mail_to request.email %>
    <td><%= request.message %>
  </tr>
  <% end %>
</table>
